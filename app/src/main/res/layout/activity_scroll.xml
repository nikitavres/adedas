<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:background="@color/white">

        <VideoView android:layout_width="match_parent" android:layout_height="200dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="32dp"
                   app:layout_constraintTop_toBottomOf="@+id/imageView4" android:id="@+id/videoView"
                   android:layout_marginEnd="16dp" android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/nig_vector" android:id="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"/>
        <TextView
                android:text="КОЛЛЕКЦИЯ JORDAN PARIS SAINT-GERMAIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/videoView"
                android:textSize="24sp" android:textAlignment="center" android:textColor="@color/black"
                android:textStyle="bold"/>
        <TextView
                android:text="Всегда роскошные, всегда легендарные"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:textColor="#000000"/>
        <Button
                android:text="Купить"
                android:layout_width="126dp"
                android:layout_height="wrap_content" android:id="@+id/button4"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginEnd="165dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="179dp" android:backgroundTint="@color/black" app:cornerRadius="55dp"
                android:textAllCaps="false" android:textSize="13sp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp" app:srcCompat="@drawable/man" android:id="@+id/imageView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/button4"
                android:layout_marginTop="32dp" android:layout_marginEnd="50dp" android:layout_marginStart="50dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp" app:srcCompat="@drawable/background_women"
                android:id="@+id/imageView8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"/>
        <ImageView
                android:layout_width="300dp"
                app:srcCompat="@drawable/women" android:id="@+id/imageView7"
                android:layout_height="300dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8"
                app:layout_constraintEnd_toEndOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintStart_toEndOf="@+id/imageView8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>